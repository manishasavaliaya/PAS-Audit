<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="@dimen/_10sdp"
    tools:context=".activities.SplashActivity">

    <!--<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"



        android:scrollbars="none"
        android:background="@drawable/shape_border_bottom"
        android:layout_below="@+id/RLprofileTop"
        >-->
        <RelativeLayout

            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/shape_thankyou"
            android:padding="@dimen/_11sdp"
            >
            <ImageView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/right_icon_big"
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="gone"
            />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
    <ImageView
        android:id="@+id/imgCheck"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/right_icon_big"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"

        />
    <TextView
        android:id="@+id/tvCompleteSurvey"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_below="@+id/imgCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/colorTextGray"
        android:layout_centerHorizontal="true"
        android:text="Audit completed successfully."
        android:textAlignment="center"
        />
</RelativeLayout>
            <Button
                android:id="@+id/btnOK"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_40sdp"


                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                style="@style/txtStyleWhite"

                android:background="@drawable/ok_btn_selector"
                />

        </RelativeLayout>

    <!--</ScrollView>-->

</RelativeLayout>
