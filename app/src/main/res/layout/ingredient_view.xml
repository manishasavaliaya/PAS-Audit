<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_25sdp"
              android:orientation="vertical"
            android:clickable="true"

              >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_24sdp"
        android:orientation="horizontal"
        >


    <TextView android:id="@+id/ingredient_textview"
              android:layout_width="0dp"
                android:layout_weight="1"
              android:layout_height="@dimen/_24sdp"
                android:textColor="@color/white"
                 android:text="Amit"
                android:singleLine="true"
                android:ellipsize="end"
                 android:paddingLeft="@dimen/_25sdp"
                android:gravity="center_vertical"
              android:textSize="@dimen/_10sdp"/>
        <FrameLayout
            android:id="@+id/FLsidebarRemaing"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:visibility="visible"
                android:id="@+id/imgSidebarCrossIcon"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pending_icon"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/imgSidebarCheckIcon"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sidebar_check_icon"
                />
        </FrameLayout>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.7dp"
    android:background="@color/white_transparent"
    ></View>
</LinearLayout>